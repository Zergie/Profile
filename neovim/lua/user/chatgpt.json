{
    "commit": {
        "type": "chat",
        "opts": {
            "template": "Write a commit message for this git diff: {{input}}",
            "strategy": "replace",
            "params": {
                "model": "gpt-4",
                "stop": [ "```" ]
            }
        },
        "args": {
            "argument": {
                "type": "strig",
                "optional": "true",
                "default": "some value"
            }
        }
    }
}

